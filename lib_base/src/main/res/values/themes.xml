<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JetAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="tabLayoutStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_8f8e94</item>
        <!--字体小写-->
        <item name="android:textAllCaps">false</item>
    </style>

    <declare-styleable name="TitleBar">

        <attr name="bottomTextVisible" format="boolean" />
        <attr name="bottomText" format="reference|string" />
        <attr name="bottomTextColor" format="reference" />
        <attr name="leftText" format="reference|string" />
        <attr name="middleText" format="reference|string" />
        <attr name="rightText" format="reference|string" />
        <attr name="rightVisible" format="boolean" />
        <attr name="leftVisible" format="boolean" />
        <attr name="showStatusBar" format="boolean" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightIcon" format="reference" />
        <attr name="middleTextColor" format="reference" />
        <attr name="rightTextColor" format="reference" />
        <attr name="leftTextColor" format="reference" />
        <attr name="leftTextSize" format="reference" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="leftTextBold" format="boolean" />
        <attr name="middleTextBold" format="boolean" />
        <attr name="rightTextBold" format="boolean" />
        <attr name="background" format="reference" />
        <attr name="middleTextVisible" format="boolean" />
        <attr name="rightIconVisible" format="boolean" />
        <attr name="showDividerLine" format="boolean" />
    </declare-styleable>


</resources>